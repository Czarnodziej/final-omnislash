{% extends 'CzarnodziejCoreBundle::base.html.twig' %}
{% block body_content %}

    <!-- Side Menu -->
    <a id="menu-toggle" href="#" class="btn btn-primary btn-lg toggle"><i class="fa fa-bars"></i></a>
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <a id="menu-close" href="#" class="btn btn-default btn-lg pull-right toggle"><i class="fa fa-times"></i></a>
            <li class="sidebar-brand"><a href="{{ url('czarnodziej_core_homepage') }}">INSANET</a>
            </li>
            <li><a href="#top">Dom</a>
            </li>
            <li><a href="#about">Autor</a>
            </li>
            <li><a href="#services">Umiejętności</a>
            </li>
            <li><a href="#callout">Projekty</a>
            </li>
            <li><a href="#portfolio">Technologie</a>
            </li>
            <li><a href="#contact">Kontakt</a>
            </li>
        </ul>
    </div>
    <!-- /Side Menu -->

    <!-- Full Page Image Header Area -->
    <div id="top" class="header">
        <div class="vert-text">
            <h1>Insanet</h1>
            <h3>
                <em>Szaleńczo</em> dobre kreacje,
                <em>Niesamowicie</em> czarujące wykonanie.</h3>
            <a href="#about" class="btn btn-default btn-lg">Kliknij mnie!</a>
        </div>
    </div>
    <!-- /Full Page Image Header Area -->

    <!-- Intro -->
    <div id="about" class="intro">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <h2>Niezwykły header mający wywołać piorunujące wrażenie</h2>
                    <p>Piękny tekst motywujący.</p>
                </div>
            </div>
        </div>
    </div>
    <!-- /Intro -->

    <!-- Services -->
    <div id="services" class="services">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center">
                    <h2>Umiejętności</h2>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-md-offset-2 text-center">
                    <div class="service-item">
                        <i class="service-icon fa fa-html5"></i>
                        <h4>Frontend</h4>
                        <p>Responsywność bootstrapowa jak i customowa. Czysto i przejrzyście.</p>
                    </div>
                </div>
                <div class="col-md-2 text-center">
                    <div class="service-item">
                        <i class="service-icon fa fa-file-code-o"></i>
                        <h4>Backend</h4>
                        <p>Dominują Symfoniczne arie, bogato doprawione precyzyjnie dobranymi bundlami, odpowiednio do zamierzeń autora.</p>
                    </div>
                </div>
                <div class="col-md-2 text-center">
                    <div class="service-item">
                        <i class="service-icon fa fa-terminal"></i>

                        <h4>Administracja</h4>
                        <p>LAMPowo Debianowa, bezpiecznie backupowa, zdrowo doprawiona SSH, rsync'iem, tail'em, grep'em oraz szczyptą vim'a i jaśnie czarną magią. Wielce terminalove ekscesy.</p>
                    </div>
                </div>
                <div class="col-md-2 text-center">
                    <div class="service-item">
                        <i class="service-icon fa fa-smile-o"></i>
                        <h4>Humor</h4>
                        <p>Co zero powiedziało do ósemki?<br>
                            "Fajny masz pasek."
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Services -->

    <!-- Callout -->
    <div id="callout" class="callout">
        <div class="row">
            <div class="container">
                <div class="col-md-4 col-md-offset-2 text-center">
                    <div class="portfolio-item">
                        <a href="http://laravel.insanet.pl" target="_blank">
                            {% image '@CzarnodziejCoreBundle/Resources/public/img/laraveil.png'
                            filter='optipng' output='/img/laraveil.png' %}
                            <img class="img-portfolio img-responsive img-thumbnail" src="{{ asset_url}}"
                                 alt="Laravel" />
                            {% endimage %}
                        </a>
                        <h2>Laravel CMS</h2>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="portfolio-item">
                        <a href="http://laravel.insanet.pl/impress" target="_blank">
                            {% image '@CzarnodziejCoreBundle/Resources/public/img/impress.png'
                            filter='optipng' output='/img/impress.png' %}
                            <img class="img-portfolio img-responsive img-thumbnail" src="{{ asset_url}}"
                                 alt="Impress.js" />
                            {% endimage %}
                        </a>
                        <h2>Impress.js</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Callout -->

    <!-- Portfolio -->
    <div id="portfolio" class="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center">
                    <h2>Technologie</h2>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-2 text-center">
                    <div class="portfolio-item">
                        <a href="http://www.phptherightway.com">
                            <img class="img-portfolio img-responsive" 
                                 src="http://www.phptherightway.com/images/banners/med-rect-300x250.png"
                                 alt="PHP: The Right Way" target="_blank"/>
                        </a>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="portfolio-item">
                        <a href="http://symfony.com" target="_blank">
                            {% image '@CzarnodziejCoreBundle/Resources/public/img/symfony_black_03_res.png'
                            filter='optipng' output='/img/symfony_black_03_res.png' %}
                            <img class="img-portfolio img-responsive" src="{{ asset_url}}"
                                 alt="Symfony2 PHP Framework" />
                            {% endimage %}
                        </a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-md-offset-2 text-center">
                    <div class="portfolio-item">
                        <a href="https://developer.mozilla.org/pl/docs/Web/JavaScript" target="_blank">
                            {% image '@CzarnodziejCoreBundle/Resources/public/img/js-res.jpg'
                            filter='jpegoptim' output='/img/js-res.jpg' %}
                            <img class="img-portfolio img-responsive" src="{{ asset_url}}"
                                 alt="JavaScript" />
                            {% endimage %}
                        </a>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="portfolio-item">
                        <a href="http://git-scm.com/" target="_blank">
                            {% image '@CzarnodziejCoreBundle/Resources/public/img/Git-Icon-1788C.png'
                            filter='optipng' output='/img/Git-Icon-1788C.png' %}
                            <img class="img-portfolio img-responsive" src="{{ asset_url}}"
                                 alt="GIT"/>
                            {% endimage %}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Portfolio -->

    <!-- LastFM -->
    <div class="lastfm">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="lastfm-top-tracks">
                        <ol>
                            <h4>Ulubione utwory z ostatnich 7 dni:</h4>
                            <li>
                                <a href="{{tracks.toptracks.track[0].url}}">
                                    <img src="{{ attribute(tracks.toptracks.track[0].image[0], '#text')}}" >
                                    {{tracks.toptracks.track[0].artist.name}} - {{tracks.toptracks.track[0].name}}
                                </a>
                            </li>
                            <li>
                                <a href="{{tracks.toptracks.track[1].url}}">
                                    <img src="{{ attribute(tracks.toptracks.track[1].image[0], '#text')}}" >
                                    {{tracks.toptracks.track[1].artist.name}} - {{tracks.toptracks.track[1].name}}</a>
                            </li>
                            <li>
                                <a href="{{tracks.toptracks.track[2].url}}">
                                    <img src="{{ attribute(tracks.toptracks.track[2].image[0], '#text')}}" >
                                    {{tracks.toptracks.track[2].artist.name}} - {{tracks.toptracks.track[2].name}}</a>
                            </li>

                            <li>
                                <a href="{{tracks.toptracks.track[3].url}}">
                                    <img src="{{ attribute(tracks.toptracks.track[3].image[0], '#text')}}" >
                                    {{tracks.toptracks.track[3].artist.name}} - {{tracks.toptracks.track[3].name}}</a>
                            </li>

                            <li>
                                <a href="{{tracks.toptracks.track[4].url}}">
                                    <img src="{{ attribute(tracks.toptracks.track[4].image[0], '#text')}}" >
                                    {{tracks.toptracks.track[4].artist.name}} - {{tracks.toptracks.track[4].name}}</a>                                        </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /LastFM  -->

    <!-- Contact Form -->
    <div id="contact">
        <div class="container">
            <div class="col-md-4 col-md-offset-4 text-center">

                {% for label, flashes in app.session.flashbag.all %}
                    {% for flash in flashes %}
                        <div class="alert alert-{{ label}}">
                            {{ flash | trans}}
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="panel-heading">
                    <h4>Formularz kontaktowy</h4>
                </div>
                <div class="panel-body">
                    <form action="{{ path('czarnodziej_core_homepage')}}#contact" method="post" class="form-horizontal">
                        {{ form_widget(form)}}
                        <div>
                            <input class="btn btn-lg btn-success btn-block"
                                   type="submit" value="{{ 'contact.submit' | trans}}" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
<!-- /Contact Form -->

<!-- Footer -->
<footer>
    <div class="container">

        <div class="row footer">

            <div class="col-md-6 col-md-offset-3 text-center">

                <ul class="list-inline">
                    <li><a href="https://www.facebook.com/marcin.marcinowy.5"><i class="fa fa-facebook fa-3x"></i></a>
                    </li>
                    <li><a href="https://twitter.com/Czarnodziej"><i class="fa fa-twitter fa-3x"></i></a>
                    </li>
                    <li><a href="https://github.com/Czarnodziej"><i class="fa fa-github fa-3x"></i></a>
                    </li>
                </ul>
                <div class="top-scroll">
                    <a href="#top"><i class="fa fa-arrow-circle-up scroll fa-4x"></i></a>
                </div>
                <hr>
                <p>&copy; Insanet.eu 2014</p>
            </div>
        </div>
    </div>
</footer>
<!-- /Footer -->
{% endblock %}

